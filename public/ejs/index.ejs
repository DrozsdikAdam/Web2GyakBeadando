<!-- Főoldal tartalma -->
<div class="bg-gray-1 dark:bg-dark-2 pt-20 pb-20 lg:pt-[120px] lg:pb-[120px]">
    <div class="container mx-auto px-4">
        <!-- Bemutató szekció -->
        <section class="text-center mb-20 wow fadeInUp" data-wow-delay=".2s">
            <h1 class="text-4xl md:text-5xl font-bold text-dark dark:text-white mb-4 leading-tight">
                Fedezd fel a Filmek Végtelen Világát
            </h1>
            <p class="text-lg text-body-color dark:text-dark-6 max-w-3xl mx-auto">
                A FilmDB a Te személyes mozi-kalauzod. Böngéssz több ezer film között, mentsd el kedvenceidet, és oszd meg barátaiddal a filmnézés élményét.
            </p>
        </section>

        <!-- Szolgáltatások szekció -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
            <div class="bg-white dark:bg-dark rounded-lg shadow-testimonial p-8 text-center transform transition duration-300 hover:-translate-y-2 wow fadeInUp" data-wow-delay=".3s">
                <div class="flex items-center justify-center h-12 w-12 rounded-full bg-primary/10 mx-auto mb-6">
                    <svg width="24" height="24" class="text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
                <h3 class="text-xl font-semibold text-dark dark:text-white mb-3">Gyors Keresés</h3>
                <p class="text-body-color dark:text-dark-6">Találd meg kedvenc filmjeidet másodpercek alatt a hatékony keresőnkkel.</p>
            </div>
            <div class="bg-white dark:bg-dark rounded-lg shadow-testimonial p-8 text-center transform transition duration-300 hover:-translate-y-2 wow fadeInUp" data-wow-delay=".4s">
                <div class="flex items-center justify-center h-12 w-12 rounded-full bg-primary/10 mx-auto mb-6">
                     <svg width="24" height="24" class="text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V7M16 3H8C6.9 3 6 3.9 6 5v2h12V5c0-1.1-.9-2-2-2z"></path></svg>
                </div>
                <h3 class="text-xl font-semibold text-dark dark:text-white mb-3">Részletes Adatbázis</h3>
                <p class="text-body-color dark:text-dark-6">Böngéssz a filmek között, nézd meg a szereplőket, értékeléseket és sok mást.</p>
            </div>
        </section>

        <!-- Legújabb filmek szekció -->
        <section class="mb-20" style="margin-top: 40px;">
            <h2 class="text-3xl font-bold text-dark dark:text-white text-center mb-12 wow fadeInUp" data-wow-delay=".2s">Néhány film a kínálatból</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Itt dinamikusan lehetne betölteni a filmeket, most placeholder-eket használunk -->
                <% const filmek = [
                    { cim: 'Piri mindent tud', ev: '1932' },
                    { cim: 'Havi 200 fix', ev: '1936' },
                    { cim: 'Egér a palotában', ev: '1942' },
                    { cim: 'Makacs Kata', ev: '1943' }
                ]; %>
                <% filmek.forEach((film, i) => { %>
                <div class="bg-white dark:bg-dark rounded-lg shadow-md p-6 flex flex-col justify-center items-center text-center transform transition duration-300 hover:shadow-lg hover:-translate-y-1 wow fadeInUp" data-wow-delay="<%= (i * 0.1) + 0.3 %>s">
                    <h4 class="font-semibold text-xl text-dark dark:text-white mb-2"><%= film.cim %></h4>
                    <p class="text-body-color dark:text-dark-6 text-base">(<%= film.ev %>)</p>
                </div>
                <% }) %>
            </div>
        </section>

        <!-- CTA szekció -->
        <section class="bg-primary rounded-lg shadow-lg text-white p-8 md:p-12 text-center wow fadeInUp" style="margin-top: 40px;padding: 10px;" data-wow-delay=".2s">
            <h2 class="text-3xl font-bold mb-4">Készen állsz a felfedezésre?</h2>
            <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
                Csatlakozz a közösségünkhöz még ma! A regisztráció gyors és ingyenes.
            </p>
            <a href="<%= basePath %>/auth/register" class="inline-block bg-white hover:bg-gray-200 text-primary font-bold py-3 px-8 rounded-md transition duration-300 transform hover:scale-105">
                Regisztrálok
            </a>
        </section>
    </div>
</div>